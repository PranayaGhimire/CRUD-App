<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900">
    <div class="w-full h-full  p-10 text-white">
        <a class="text-blue-500" href="/">Back to Home</a>
        <h1 class="text-2xl tracking-tighter mb-3 mt-5">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0) { %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-600" href="/edit/<%=user.id%>">Edit User</a>
                        <a class="text-zinc-400" href="/delete/<%= user.id %>">Delete User</a>
                    </div>
         
            </div>
            <% })} else {  %>
      
                <h3>No Users yet </h3>
               <% } %>
        </div>
    </div>
</body>
</html>